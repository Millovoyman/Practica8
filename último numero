// Programa para calcular n números pares e impares y muestre el último número par e impar
#include <stdio.h>
void main()
{
    int par, impar, n, i=1;
    
    printf("Ingrese un número:\n");
    scanf("%d",&n);
    
    while(i<=n)
    {
        if(i%2 ==0)
        {
            par=i;
        }
        else
        {
            impar=i;
        }
        i++;
    }
    
    
    {
        
    printf("El ultimo número par es %d \n", par);
    printf("El ultimo número impar es %d \n", impar);
    }
}
